<%%= provide :page_title, I18n.t('<%= plural_table_name %>.index.header') %>
<%%= provide :breadcrumb do %>
  <li><%%= I18n.t('activerecord.models.<%= singular_table_name %>.other') %></li>
<%% end %>

<div class="block">
  <div class="block-header">
      <h3 class="block-title"><%%= I18n.t('<%= plural_table_name %>.index.block_header') %></h3>
      <div class="block-options">
        <%%= link_to I18n.t('misc.action.new'), new_<%= singular_table_name %>_path, class: 'btn btn-sm btn-square btn-success' %>
      </div>
  </div>
  <div class="block-content">
    <table class="table table-striped">
        <thead>
            <tr>
            <% attributes.reject(&:password_digest?).each do |attribute| -%>
              <th><%%=t 'activerecord.attributes.<%= singular_table_name %>.<%= attribute.name %>' %></th>
            <% end -%>
              <th class="text-center" style="width: 100px;"><%%=t 'misc.actions' %></th>
            </tr>
        </thead>
        <tbody id='<%= plural_table_name %>'>
          <%%= render 'collection', collection: @<%= plural_table_name %> %> 
        </tbody>
    </table>
    <% if defined?(Kaminari) %>
    <div class="dataTables_paginate paging_simple_numbers"  id="pagination">
      <%%#= render 'pagination', collection: @<%= plural_table_name %> %>
    </div>
    <% end %>
  </div>
</div>
