<%= form_for @attachment, html: { multipart: true } do |f| %>
  <% if @attachment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attachment.errors.count, "error") %> prohibited this attachment from being saved:</h2>

      <ul>
      <% @attachment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <p>
      <%= f.label :name, "Nome" %><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :file_type, "Tipo do Arquivo" %>
      <%= f.text_field :file_type %>
    </p>

    <p>
      <%= f.label :data, "Arquivo" %>
      <%= f.file_field :data %>
    </p>
    <p>
      <%= f.label :situation, "Situação" %>
      <%= f.check_box :situation %>
    </p>

    <p>
      <%= f.label :origin_type, "Tipo de origem" %>
      <%= f.text_field :origin_type %>
    </p>

    <%= f.submit %>
  </div>
<% end %>
