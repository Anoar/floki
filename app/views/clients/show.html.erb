<%= provide :page_title, I18n.t('clients.show.header', resource: @client.try(:id) ) %>
<%= provide :breadcrumb do %>
  <li><%= link_to  I18n.t('activerecord.models.client.other'), clients_path %></li>
  <li><%= link_to  @client.try(:id), @client %></li>
  <li><%= I18n.t('clients.show.header', resource: @client.try(:id) ) %></li>
<% end %>

<div class="panel">
  <div class="panel-heading">
    <h3 class="panel-title"><%= I18n.t('clients.show.header', resource: @client.try(:id)) %></h3>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        </thead>
        <tbody>
                  <tr>
            <td><strong><%=t 'activerecord.attributes.client.fantasy_name' %>:</strong></td>
             <td><%= @client.fantasy_name %></td>
          </tr>   
                  <tr>
            <td><strong><%=t 'activerecord.attributes.client.corporate_name' %>:</strong></td>
             <td><%= @client.corporate_name %></td>
          </tr>   
                </tbody>
      </table>
    </div>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-sm-7">
        <%= link_to I18n.t('misc.action.back'), clients_path, class: 'btn btn-default' %>
        <%= link_to I18n.t('misc.action.edit'),edit_client_path(@client), class: 'btn btn-warning' %>
        <%= link_to I18n.t('misc.action.destroy'),client_path(@client), method: :destroy, data: {confirm: I18n.t('misc.actions.confirm') }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
